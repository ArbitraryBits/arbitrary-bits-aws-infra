{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Deploy All",
            "command": "cdk deploy --all --require-approval never",
            "type": "shell",
            "group": "build",
            "problemMatcher": [],
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "Destroy All",
            "command": "cdk destroy --all --require-approval never",
            "type": "shell",
            "group": "build",
            "problemMatcher": [],
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/ArbitraryBitsAwsInfra/ArbitraryBitsAwsInfra.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/ArbitraryBitsAwsInfra/ArbitraryBitsAwsInfra.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/src/ArbitraryBitsAwsInfra/ArbitraryBitsAwsInfra.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}